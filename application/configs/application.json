{
    "production": {
        "app": {
            "name": "Hazaar MVC Example Application",
            "version": "1.2.0",
            "locale": "en_AU.UTF-8",
            "layout": "application",
            "theme": {
                "name": "test"
            },
            "defaultController": "Index",
            "rewrite": true
        },
        "paths": {
            "model": "models",
            "view": "views",
            "controller": "controllers"
        },
        "php": {
            "date": {
                "timezone": "UTC"
            },
            "display_startup_errors": 0,
            "display_errors": 0
        },
        "view": {
            "requires": [ "application.js" ],
            "link": [ "main.css" ],
            "helper": {
                "load": {
                    "cdnjs": {
                        "cache_local": true,
                        "libs": [
                            {
                                "name": "pace",
                                "files": [ "pace.min.js", "themes/purple/pace-theme-minimal.min.css" ]
                            },
                            {
                                "name": "jquery",
                                "version": "2.2.4"
                            }
                        ]
                    },
                    "bootstrap": {
                        "version": "4.0.0-alpha.6",
                        "theme": "yeti"
                    }
                }
            }
        }
    },
    "development": {
        "include": "production",
        "app": {
            "locale": "en",
            "debug": true
        },
        "php": {
            "display_startup_errors": 1,
            "display_errors": 1
        }
    }
}
